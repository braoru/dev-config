[Unit]
Description=Populate cockroach with users and databases needed for the job library
After=cockroach.service

[Service]
Type=oneshot
User=cockroach
ExecStart=/opt/cockroach/cockroach user set job --insecure
ExecStart=/opt/cockroach/cockroach sql --insecure -e 'CREATE DATABASE jobs'
ExecStart=/opt/cockroach/cockroach sql --insecure -e 'GRANT ALL ON DATABASE jobs TO job'
ExecStart=+/bin/systemctl disable cockroach_init 
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
